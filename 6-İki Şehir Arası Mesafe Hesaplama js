function calculateDistance() {
  const city1 = document.getElementById('city1').value;
  const city2 = document.getElementById('city2').value;

  // Örnek mesafe hesaplama (gerçek mesafeyi bir API ile alabilirsiniz)
  const distance = 100;  // Sabit örnek mesafe (km cinsinden)
  
  document.getElementById('distance-result').textContent = "Distance between " + city1 + " and " + city2 + " is " + distance + " km.";
}
